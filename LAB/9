#include <stdio.h>
#include <math.h>

void main() {
  char t[100],c[100],a[200];
  int i=0,j=0 ,l=0,f=0;
  printf("Enter 1st text \n");
  gets(t);
  printf("Enter 2nd text \n");
  gets(c);
  while(1)
  {
    if(t[j]!='$')
    {
      a[i++]=t[j++];
    }
    else
    {
      break;
    }  
  }
  a[i]=" ";
  i++;
  j=0;
  while(1)
  {
    if(c[j]!='$')
    {
      
      a[i++]=c[j++];
    }
    else
    {
      break;
    }
  }
  a[i]='\0'; 
  printf("%s is the concatenated text \n",a);
}
  
